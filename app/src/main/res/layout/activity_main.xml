    <Button
        android:id="@+id/btn0"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btnPlusMin"
        app:layout_constraintRight_toLeftOf="@+id/btnDecPoint"
        app:layout_constraintTop_toTopOf="@+id/btnPlusMin" />

    <Button
        android:id="@+id/btnPlusMin"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_pl_min"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn0"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor2"
        app:layout_constraintVertical_bias="0.006" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1"
        tools:layout_editor_absoluteY="506dp"
        tools:layout_editor_absoluteX="0dp" />

