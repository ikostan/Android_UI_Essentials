<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.uiessentials.MainActivity">

    <TextView
        android:id="@+id/txtScreen"
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:background="@android:color/background_light"
        android:gravity="right|center"
        android:paddingRight="4dp"
        android:text="@string/original_text"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="2dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        tools:layout_editor_absoluteY="102dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="x"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn9"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        android:layout_marginTop="-5dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="9"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/btnMult"
        app:layout_constraintTop_toTopOf="@+id/btn8"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        android:layout_marginTop="-5dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="8"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        android:layout_marginTop="-5dp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="7"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor5"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn8"
        app:layout_constraintVertical_bias="0.43" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        tools:layout_editor_absoluteY="307dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="-"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn6" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="6"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="@+id/btn5"
        app:layout_constraintLeft_toRightOf="@+id/btn5"
        app:layout_constraintRight_toLeftOf="@+id/btnMinus" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="5"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        app:layout_constraintLeft_toRightOf="@+id/btn4" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:layout_marginBottom="39dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor4"
        tools:ignore="HardcodedText"
        app:layout_constraintRight_toLeftOf="@+id/btn5"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="384dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/plus"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn1"
        app:layout_constraintRight_toLeftOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn2"
        app:layout_constraintRight_toLeftOf="@+id/btnPlus"
        app:layout_constraintTop_toTopOf="@+id/btn2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor3"
        tools:ignore="HardcodedText" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        tools:layout_editor_absoluteY="435dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_equal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btnDecPoint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnDecPoint" />

    <Button
        android:id="@+id/btnDecPoint"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_dot"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn0"
        app:layout_constraintRight_toLeftOf="@+id/btnEqual"
        app:layout_constraintTop_toTopOf="@+id/btn0" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_0"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btnPlusMin"
        app:layout_constraintRight_toLeftOf="@+id/btnDecPoint"
        app:layout_constraintTop_toTopOf="@+id/btnPlusMin" />

    <Button
        android:id="@+id/btnPlusMin"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_pl_min"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHor1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn0"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor2"
        app:layout_constraintVertical_bias="0.006" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineHor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99"
        tools:layout_editor_absoluteY="506dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
