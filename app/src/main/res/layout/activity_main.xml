        app:layout_constraintTop_toTopOf="@+id/btn_root"
        app:layout_constraintLeft_toRightOf="@+id/btn_root" />

    <Button
        android:id="@+id/btn_root"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_root"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/btn_pow"
        app:layout_constraintTop_toTopOf="@+id/btnPercent"
        app:layout_constraintLeft_toRightOf="@+id/btnPercent" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="88dp"
        android:layout_height="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/btn_prcnt"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/guidelineHor7"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
